rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profiles - users can only access their own profile
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Motions - users can only access their own motions
    match /motions/{motionId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.user_id;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.user_id;
    }
    
    // Motion drafts - accessible if user owns the motion
    match /motions/{motionId}/drafts/{draftId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/motions/$(motionId)) &&
        get(/databases/$(database)/documents/motions/$(motionId)).data.user_id == request.auth.uid;
    }
  }
}